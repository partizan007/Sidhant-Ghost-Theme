<div class='c-hero'>
  <div class='o-grid c-hero__container'>
    <div class='o-grid__col o-grid__col--initial-grow o-grid__col--4-4-s o-grid__col--2-4-m'>
      <div class='c-hero__content'>



        {{#if @labs.members}}
        <h3>Hey, <br>it's Sidhant again</h3>
        <p>Welcome back!</p>
          {{#unless @member}}
                  {{{ @site.description }}}
            {{> subscribe-form inputLabel='subscribe-email-hero'}}
          {{/unless}}
        {{/if}}
      </div>
    </div>

    {{#if @site.cover_image}}
      <div class='o-grid__col o-grid__col--4-4-s o-grid__col--2-4-m'>
        <img class='c-hero-image lazyload' data-src='{{ @site.cover_image }}' alt='{{ @site.title }}'>
      </div>
    {{/if}}
  </div>
</div>
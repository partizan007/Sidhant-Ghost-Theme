<header>
  {{#if feature_image}}
    <div class='o-grid'>
      <div class='o-grid__col o-grid__col--center o-grid__col--4-4-m'>
        <div class='c-post-image-wrap'>
          <img class='c-post-image lazyload' data-src='{{ img_url feature_image }}' alt='{{ title }}'>
        </div>
      </div>
    </div>
  {{/if}}

  <div class='o-grid'>
    <div class='o-grid__col o-grid__col--center o-grid__col--4-4-s'>
      <div class='c-post-header'>
        <h1 class='c-post-header__title'>{{ title }}</h1>
        {{#if custom_excerpt}}
          <p class='c-post-header__excerpt'>{{ custom_excerpt }}</p>
        {{/if}}

        {{#is 'post'}}
          <div class='c-post-header__meta'>
            {{#primary_author}}
              <a href='{{ url }}' class='c-post-header__author'>
                {{#if profile_image}}
                  <div class='c-post-header__author--image-wrap'>
                    <img class='c-post-header__author--image lazyload' data-src='{{ img_url profile_image size='s' }}' alt='{{ name }}'>
                  </div>
                {{/if}}
                {{ name }}
              </a>
            {{/primary_author}}
            <time class='c-post-header__date' datetime='{{ date format='YYYY-MM-DD' }}' title='{{ date format='DD MMMM YYYY' }}'>{{ date format='DD.MMM.YYYY' }}</time>
          </div>
        {{/is}}
      </div>
    </div>
  </div>
</header>